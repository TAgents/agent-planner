# Test Environment Configuration
# Copy this file to .env.test and fill in your test database credentials

# Test Supabase Configuration
TEST_SUPABASE_URL=your_test_supabase_url
TEST_SUPABASE_ANON_KEY=your_test_supabase_anon_key
TEST_SUPABASE_SERVICE_KEY=your_test_supabase_service_key

# Test Database (if using direct connection)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# Test JWT Configuration
TEST_JWT_SECRET=test_jwt_secret_for_testing_only

# Test Application Configuration
TEST_PORT=3001
NODE_ENV=test
TEST_FRONTEND_URL=http://localhost:3002

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# Test Email Configuration (use mock in tests)
TEST_EMAIL_SERVICE=mock
TEST_SEND_VERIFICATION_EMAIL=false

# Test Timeouts
TEST_TIMEOUT_MS=30000
TEST_RETRY_ATTEMPTS=3
