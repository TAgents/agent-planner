{
  "name": "agent-planner",
  "version": "0.1.0",
  "description": "A collaborative planning system for humans and AI agents",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:setup": "node tests/setup/initTestDb.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:auth": "jest tests/integration/auth.test.js",
    "test:plans": "jest tests/integration/plans.test.js",
    "test:nodes": "jest tests/integration/nodes.test.js",
    "test:workflows": "jest tests/e2e/workflows.test.js",
    "test:all": "npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:all": "npm run docs:generate && npm run docs:validate",
    "db:generate": "drizzle-kit generate --config=drizzle.config.mjs",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.mjs",
    "db:push": "drizzle-kit push --config=drizzle.config.mjs",
    "db:studio": "drizzle-kit studio --config=drizzle.config.mjs"
  },
  "dependencies": {
    "@hatchet-dev/typescript-sdk": "^1.12.0",
    "@slack/web-api": "^7.14.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "ignore": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.13",
    "pg": "^8.16.3",
    "postgres": "^3.4.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@faker-js/faker": "^8.3.1",
    "@types/node": "^25.2.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "js-yaml": "^4.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
