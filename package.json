{
  "name": "agent-planner",
  "version": "0.1.0",
  "description": "A collaborative planning system for humans and AI agents",
  "main": "src/index.js",
  "scripts": {
    "db:activity-updates": "node src/db/apply-activity-search-updates.js",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:setup": "node tests/setup/initTestDb.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:auth": "jest tests/integration/auth.test.js",
    "test:plans": "jest tests/integration/plans.test.js",
    "test:nodes": "jest tests/integration/nodes.test.js",
    "test:workflows": "jest tests/e2e/workflows.test.js",
    "test:all": "npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "db:init": "node -e \"require('./src/db/init').initializeDatabase()\"",
    "db:fix-rls": "node src/db/apply-rls-fixes.js",
    "lint": "eslint src/**/*.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:all": "npm run docs:generate && npm run docs:validate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "ignore": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@faker-js/faker": "^8.3.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
